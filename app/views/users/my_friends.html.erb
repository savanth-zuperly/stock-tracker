<h1>My Friends</h1>

<div class="search-area">
    <h3>Search for a Friend</h3>

    <%= form_tag search_friends_path, remote: true, method: :get do%>
        <div class="form-group row">
            <div class="col-sm-9">
                <%= text_field_tag :friend, params[:friend], placeholder: "Enter a name or email to search", autofocus: true, class: "form-control form-control-lg"%>
            </div>
            <div class="col-sm-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do%>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>

</div>

<div id="friend_results">
</div>

<div class="friends-list">
  <% if !@friends.empty? %>
    <%= render 'users/list' %>
  <% end %>
</div>

